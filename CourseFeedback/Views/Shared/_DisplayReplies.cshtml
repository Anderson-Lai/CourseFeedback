@{
}

@{
    var controller = ViewBag.RerouteToController ?? string.Empty;
    var viewModel = ViewBag.Model ?? string.Empty;
    var user = ViewBag.User ?? string.Empty;
    var controllerUser = ViewBag.ControllerUser ?? string.Empty;
    string divStyle = "container-fluid";
    string type = ViewBag.IsCommentOrReply ?? string.Empty;
}

<div class="col-md-12 m-2 border border-dark text-start">
    <div class="d-flex">
        <p class="card-body m-0" style="max-width: fit-content">
            @type by:
            <a class="m-0 p-0" asp-controller="Users"
               asp-action="Index" asp-route-id="@user.Id">
                @user.FirstName @user.MiddleName
                @user.LastName @viewModel.TimeCreated
            </a>
        </p>
        @if (viewModel.Edited)
        {
            <p class="card-body m-0 px-0">
                (Edited) @viewModel.TimeEdited
            </p>
        }
    </div>

    <p class="card-body m-0">@viewModel.Text</p>

    <div class="row">
        @if(controllerUser == "FirstComments")
        {
            <div class="col-md-6 d-flex align-items-center">
                <a class="card-body m-0" asp-controller="Comments"
                   asp-action="Add" asp-route-id="@viewModel.Id">
                    Add a reply
                </a>
            </div>

            divStyle = "col-md-6";
        }
        else if (controllerUser == "Courses")
        {
            <div class="col-md-6 d-flex align-items-center">
                <a class="card-body m-0" asp-controller="Comments"
                   asp-action="Index" asp-route-id="@viewModel.Id">
                    View replies
                </a>
            </div>

            divStyle = "col-md-6";
        }
        
        <div class="@divStyle d-flex justify-content-end align-items-center">
            <a asp-controller="@controller" asp-action="Edit" asp-route-id="@viewModel.Id"
               class="btn btn-primary m-2">
                Edit
            </a>
        </div>
    </div>

</div>
